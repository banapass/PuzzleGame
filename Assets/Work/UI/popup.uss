.popup-hide {
    top: 100%;
    position: absolute;
    width: 100%;
    height: 50%;
    transition-property: top;
    transition-timing-function: ease-in-back;
    transition-duration: 0.5s;
    display: none;
}

.popup-show {
    top: 30%;
    position: absolute;
    width: 100%;
    height: 50%;
    transition-property: top;
    transition-timing-function: ease-out-back;
    transition-duration: 0.5s;
    display: flex;
    opacity: 1;
}
